<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/AdminCss")
    @Scripts.Render("~/bundles/bootstrap_js")
</head>
<body>
    <div class="wrapper">
        <!-- HEADER -->
        <div class="header">
            <!-- LOGO -->
            <a class="logo" href="Admin">
                <img src="Content/img/logo.png" alt="admin panel" title="admin panel" style="width: 50px;" />
            </a>
            <!-- Setting Theme -->
            <ul class="header_menu">
                @Html.Partial("_SettingTheme")
            </ul>
        </div>
        <!-- END HEADER -->


        <!-- Navigation Menu Left -->
        <div class="menu">
            <!-- Setting User -->
            @Html.Partial("_SettingUser")
            <!-- Seach Tool -->
            <div class="widget">
                <div class="input-group">
                    <input id="appendedInputButton" class="form-control" type="text" />
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="button">Search</button>
                    </div>
                </div>
            </div>
            <div class="dr"><span></span></div>
            <!-- Navigation Menu Content -->
            <ul class="navigation">
                <li class="openable">
                    <a href="#"><span class="isw-list"></span><span class="text">User Administration</span></a>
                    <ul>
                        <li>
                            <a href="#"><span class="glyphicon glyphicon-user"></span><span class="text">Users</span></a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="dr"><span></span></div>
            <!-- Widget -->
            <div class="widget-fluid">
                <div class="wBlock clearfix">
                    <div class="dSpace">
                        <h3>Last visits</h3>
                        <span class="number">10</span>
                        <span>1 <b>unique</b></span>
                        <span>2 <b>returning</b></span>
                    </div>
                    <div class="rSpace">
                        <h3>Today</h3>
                        <span class="mChartBar" sparktype="bar" sparkbarcolor="white">
                            <canvas width="89" height="16" style="display: inline-block; width: 89px; height: 16px; vertical-align: top;"></canvas>
                        </span>
                        <span>&nbsp;</span>
                        <span>65% <b>New</b></span>
                        <span>35% <b>Returning</b></span>
                    </div>
                </div>
            </div>
            <!-- ************************ -->
        </div>
        <!-- END MENU -->

        <!-- CONTENT -->
        <div class="content">
            <div class="breadLine">
                <!-- BreadCrumb Left -->
                <ul class="breadcrumb">
                    <li><a href="Admin">Home</a></li>
                </ul>
                <!-- Tool Right -->
                <ul class="buttons">
                    <!-- Chatting User List -->
                    @Html.Partial("_ChattingUserList")
                    <!-- Search Tool -->
                    <li>
                        <a href="#" class="link_bcPopupSearch">
                        <span class="glyphicon glyphicon-search"></span>
                        <span class="text">Search</span></a>
                        <div id="bcPopupSearch" class="popup">
                            <div class="head clearfix">
                                <div class="arrow"></div>
                                <span class="isw-zoom"></span>
                                <span class="name">Search</span>
                            </div>
                            <div class="body search">
                                <input type="text" placeholder="Some text for search..." name="search">
                            </div>
                            <div class="footer">
                                <button class="btn btn-default" type="button">Search</button>
                                <button class="btn btn-danger link_bcPopupSearch" type="button">Close</button>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>


            <div>
                @RenderBody()
            </div>

        </div>
        <!-- END CONTENT -->

    </div>
</body>
</html>
